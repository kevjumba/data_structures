class TreeHeight {
	int n;
	vector<int> parent;
	vector<int> children[n];

public:
	void read() {
		cin >> n;
		parent.resize(n);
		for (int i = 0; i < n; i++)
			cin >> parent[i];
	}

	void fillChildren(){
	  for(int i=0;i<n;i++){
	    if(parent[i]==-1) continue;
	    else children[parent[i]].push_back(i);
	  }
	}

	int compute_height() {
		// Replace this code with a faster implementation

	}
};

int main() {
	std::ios_base::sync_with_stdio(0);
	TreeHeight tree;
	tree.read();
	tree.fillChildren();
	std::cout << tree.compute_height() << std::endl;
}
