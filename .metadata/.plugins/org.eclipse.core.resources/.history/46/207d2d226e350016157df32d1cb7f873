#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
class TreeHeight {
	int n;
	vector<int> parent;

public:
	void read() {
		cin >> n;
		parent.resize(n);
		for (int i = 0; i < n; i++)
			cin >> parent[i];
	}

	int rootIndex(){
	}
	int compute_height() {
		// Replace this code with a faster implementation
		int maxHeight = 0;
		for (int vertex = 0; vertex < n; vertex++) {
			int height = 0;
			for (int i = vertex; i != -1; i = parent[i])
				height++;
			maxHeight = max(maxHeight, height);
		}
		return maxHeight;
	}
};

int main() {
	std::ios_base::sync_with_stdio(0);
	TreeHeight tree;
	tree.read();
	std::cout << tree.compute_height() << std::endl;
}
